Sub DisplayMeetingData()

  Dim lastRow As Long
  Dim i As Long
  Dim msg As String
  Dim ws As Worksheet

  ' Set the worksheet where the data is located
  Set ws = ThisWorkbook.Sheets("Sheet1") ' Change "Sheet1" to your sheet name

  ' Find the last row with data
  lastRow = ws.Cells(Rows.Count, 1).End(xlUp).Row

  ' Loop through each row and build the message string
  For i = 2 To lastRow ' Assuming headers in row 1
    msg = msg & "Meeting " & i - 1 & vbCrLf
    msg = msg & "Date: " & ws.Cells(i, 1).Value & vbCrLf
    msg = msg & "Start Time: " & ws.Cells(i, 2).Value & vbCrLf
    msg = msg & "End Time: " & ws.Cells(i, 3).Value & vbCrLf
    msg = msg & "Subject: " & ws.Cells(i, 4).Value & vbCrLf
    msg = msg & "Required Members: " & ws.Cells(i, 5).Value & vbCrLf
    msg = msg & "Optional Members: " & ws.Cells(i, 6).Value & vbCrLf
    msg = msg & vbCrLf ' Add an extra line break between meetings
  Next i

  ' Display the message box
  MsgBox msg, vbInformation, "Meeting Data"

End Sub